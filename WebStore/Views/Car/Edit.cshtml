@model CarViewModel

@{
    //Layout = null;
    ViewData["Title"] = "Редактирование автомобиля";
}

<h2>@ViewData["Title"]</h2>
@*@Html.EditorForModel()*@

<h4>Автомобиль</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="BodyType" class="control-label">Тип кузова</label>
                <input asp-for="BodyType" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label">Цвет</label>
                <input asp-for="Color" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Drive" class="control-label">Привод</label>
                <input asp-for="Drive" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="EngineVolume" class="control-label">Объем двигателя</label>
                <input asp-for="EngineVolume" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Mark" class="control-label">Марка</label>
                <input asp-for="Mark" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label">Модель</label>
                <input asp-for="Model" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Transmission" class="control-label">Трансмиссия</label>
                <input asp-for="Transmission" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="YearRelease" class="control-label">Год выпуска</label>
                <input asp-for="YearRelease" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>